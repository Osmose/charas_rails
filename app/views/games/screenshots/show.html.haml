= main_box("#{@screenshot.game.name} Screenshot", "screenshots") do
  .screenshot= image_tag(@screenshot.img.url)
  .navform.wat-cf
    - if @prev_screenshot
      = button_link(image_tag("icons/sm/arrow_left.png") + " Previous", games_screenshots_show_path(@prev_screenshot))
    - if @next_screenshot
      = button_link("Next " + image_tag("icons/sm/arrow_right.png"), games_screenshots_show_path(@next_screenshot), "right")
    - if @screenshot.game.is_developer?(current_user)
      = button_link(image_tag("icons/sm/picture.png") + " Make Game Logo", games_screenshots_logo_path(@screenshot))

= content_for :sidebar do
  = game_navigation(@screenshot.game)