= main_box(@game.name, "gameInfo") do
  .logo= image_tag(@game.logo.url(:small))
  %ul.list
    = list_item("Author", @game.user.name)
    = list_item("Description") do
      :markdown
        #{@game.description}
  .clear

= content_for :sidebar do
  - if @game.user == current_user
    .block
      %h3 Manage Game
      %ul.navigation
        %li= link_to("Edit Game Info", edit_game_path(@game))