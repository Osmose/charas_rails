- semantic_form_for @game, :html => {:multipart => true} do |f|
  - f.inputs do
    = f.input :name
    = f.input :engine, :as => :select, :collection => Game::AllowedEngines, :include_blank => false
    = f.input :description, :input_html => {:rows => 5}
    = f.input :file, :hint => "(zip files only)"
  - f.buttons do
    = submit_button("#{image_tag("tick.png")} Submit")