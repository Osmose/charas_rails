= small_box("Login ") do
  - semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    = devise_error_messages!
    - f.inputs do
      = f.input :email
      = f.input :password
      = f.input :remember_me, :as => :boolean
    - f.buttons do
      .columns
        .left.column= submit_button("#{image_tag("key.png")} Log In")
        .right.column.alignRight= render :partial => "devise/shared/links"