= small_box("Sign Up") do
  - semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    - f.inputs do
      = f.input :email
      = f.input :name
      = f.input :password
      = f.input :password_confirmation
    - f.buttons do
      .columns
        .left.column= submit_button("#{image_tag("tick.png")} Sign Up")
        .right.column.alignRight= render :partial => "devise/shared/links"