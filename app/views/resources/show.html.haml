= main_box(@resource.name) do
  .resource
    - if @resource.type == :image
      = image_tag(@resource.res.url)
    - elsif @resource.type == :audio
      = link_to(@resource.res_file_name, @resource.res.url, :class => "embedMedia")
  .navform.wat-cf
    = favorite_button(@resource)
  %ul.list
    %li
      .left.label Author
      .item= @resource.user.name
    %li
      .left.label Category
      .item= link_to(@resource.category.name, resource_category_path(@resource.category.id))
    %li
      .left.label Favorites
      .item= @resource.fans.length
    %li
      .left.label Description
      .item
        :markdown
          #{@resource.description}

= content_for :sidebar do
  = render "resources_sidebar"