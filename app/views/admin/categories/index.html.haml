= main_box("Categories") do
    %table.table
        %tr
            %th Name
            %th Parent
            %th Actions
        = render :partial => "row", :collection => @categories
    .actions-bar.wat-cf
        .actions
            = link_to(image_tag("add.png") + " New", new_admin_category_path, :class => "button")
        .pagination
            = will_paginate @resources